<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterialButtonTextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DefaultMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/MaterialButtonTextAppearance</item>
        <item name="backgroundTint">@color/default_material_button_bg_tint</item>
        <item name="rippleColor">@color/arctic_1</item>
        <item name="android:minHeight">@dimen/default_material_button_height</item>
    </style>

    <!-- Outline Buttons -->
    <style name="OutlineMaterialButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/silver_4</item>
        <item name="android:textAppearance">@style/MaterialButtonTextAppearance</item>
        <item name="strokeColor">@color/silver_4</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">@color/silver_4_12_pct</item>
        <item name="android:minHeight">@dimen/default_material_button_height</item>
    </style>

    <style name="OutlineMaterialButtonStyle.Thin">
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Flat Buttons -->
    <style name="FlatMaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/MaterialButtonTextAppearance</item>
        <item name="android:minHeight">@dimen/default_material_button_height</item>
    </style>

</resources>